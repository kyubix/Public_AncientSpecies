<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Cape -->
  <ThingDef ParentName="AS_WHE_ApparelColorBase">
    <defName>AS_WHE_Cape</defName>
    <description>皮や布で作られた肩掛け。寒さと攻撃から身を守ります。</description>
    <label>ケープ（ハーフエルフ）</label>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>WHE/Apparels/shell/Cape</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>160</MaxHitPoints>
      <WorkToMake>7000</WorkToMake>
      <StuffEffectMultiplierArmor>0.32</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.80</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.30</StuffEffectMultiplierInsulation_Heat>
      <Mass>4</Mass>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <researchPrerequisite>AS_WHE_Apparel_Elementary</researchPrerequisite>
    </recipeMaker>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>WHE/Apparels/shell/Cape</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>WHE_Medieval</li>
        <li>WHE_Industrial</li>
        <li>RoyalTier2</li>
        <li>RoyalTier5</li>
        <li>RoyalTier6</li>
        <li>RoyalTier7</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

