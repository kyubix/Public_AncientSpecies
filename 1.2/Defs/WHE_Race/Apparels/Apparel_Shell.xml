        <li>Worker</li>
      </defaultOutfitTags>
      <tags>
        <li>RoyalTier5</li>
        <li>RoyalTier6</li>
        <li>RoyalTier7</li>
      </tags>
    </apparel>
  </ThingDef>

  <!-- Marine Armor -->
  <ThingDef ParentName="AS_WHE_ApparelColorBase">
    <defName>AS_WHE_MarineArmor</defName>
    <description>ハーフエルフ式の高い強度を持つ高性能アーマーです。</description>
    <label>ハーフエルフ式マリーンアーマー</label>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>WHE/Apparels/middle/MarineArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <ComponentSpacer>4</ComponentSpacer>
      <Plasteel>50</Plasteel>
      <Uranium>12</Uranium>
    </costList>
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>360</MaxHitPoints>
      <WorkToMake>65000</WorkToMake>
      <Mass>15</Mass>
      <StuffEffectMultiplierArmor>1.10</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>14</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>10</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>18</EquipDelay>
      <Flammability>0.01</Flammability>
    </statBases>
    <tradeTags>
      <li>AS_WHE_HiTechArmor</li>
    </tradeTags>
    <equippedStatOffsets>
			<MoveSpeed>0.05</MoveSpeed>
		</equippedStatOffsets>
    <recipeMaker>
      <researchPrerequisite>AS_WHE_Apparel_Spacer</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>14</Crafting>
      </skillRequirements>
    </recipeMaker>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Hands</li>
				<li>Feet</li>
      </bodyPartGroups>
      <wornGraphicPath>WHE/Apparels/middle/MarineArmor</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>AS_WHE_Army</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  <!-- Pressure Resistant suits -->
