<?xml version="1.0" encoding="utf-8"?>
<Defs>
<!-- Assault Rifle -->
<ThingDef ParentName="BaseHumanMakeableGun">
	<defName>AS_AssaultRifle</defName>
	<label>ASアサルトライフル</label>
	<description>ある古代技術により作られた突撃銃。</description>
	<graphicData>
		<texPath>AT/Weapons/AssaultRifle</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<soundInteract>AS_Sound_Assault_Rifle_Interact</soundInteract>
	<statBases>
		<WorkToMake>42000</WorkToMake>
		<Mass>4.8</Mass>
		<AccuracyTouch>0.90</AccuracyTouch>
		<AccuracyShort>0.80</AccuracyShort>
		<AccuracyMedium>0.75</AccuracyMedium>
		<AccuracyLong>0.70</AccuracyLong>
		<RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
	</statBases>
	<weaponTags>
		<li>AS_Assault_Rifle</li>
	</weaponTags>
	<costList>
		<Steel>100</Steel>
		<ComponentIndustrial>4</ComponentIndustrial>
	</costList>
	<recipeMaker>
		<researchPrerequisite>AS_Weapons</researchPrerequisite>
		<skillRequirements>
			<Crafting>8</Crafting>
		</skillRequirements>
	</recipeMaker>
	<thingCategories>
		<li>AS_Weapons</li>
	</thingCategories>
	<verbs>
		<li>
			<verbClass>Verb_Shoot</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>AS_Bullet_Assault_Rifle</defaultProjectile>
			<warmupTime>1.2</warmupTime>
			<range>30.9</range>
			<burstShotCount>3</burstShotCount>
			<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
			<soundCast>AS_Sound_Assault_Rifle</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
		</li>
	</verbs>
	<tools>
		<li>
			<label>stock</label>
			<capacities>
				<li>Blunt</li>
			</capacities>
			<power>9</power>
			<cooldownTime>2</cooldownTime>
		</li>
		<li>
			<label>barrel</label>
			<capacities>
				<li>Blunt</li>
				<li>Poke</li>
			</capacities>
			<power>9</power>
			<cooldownTime>2</cooldownTime>
		</li>
	</tools>
</ThingDef>

<!-- Assault Rifle Custom -->
<ThingDef ParentName="BaseHumanMakeableGun">
	<defName>AS_AssaultRifleCustom</defName>
	<label>ASアサルトライフルカスタム</label>
	<description>ASアサルトライフルのカスタム版。フレームの強化とグリップを取付けることで、射撃の命中精度と安定性を向上させている。</description>
	<graphicData>
		<texPath>AT/Weapons/AssaultRifleCustom</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<soundInteract>AS_Sound_Assault_Rifle_Interact</soundInteract>
	<statBases>
		<WorkToMake>15000</WorkToMake>
		<Mass>4.9</Mass>
		<AccuracyTouch>0.95</AccuracyTouch>
		<AccuracyShort>0.90</AccuracyShort>
		<AccuracyMedium>0.85</AccuracyMedium>
		<AccuracyLong>0.75</AccuracyLong>
		<RangedWeapon_Cooldown>0.9</RangedWeapon_Cooldown>
	</statBases>
	<weaponTags>
		<li>AS_Assault_Rifle</li>
	</weaponTags>
	<costList>
        <AS_AssaultRifle>1</AS_AssaultRifle>
		<Steel>20</Steel>
		<ComponentSpacer>1</ComponentSpacer>
	</costList>
	<recipeMaker>
		<researchPrerequisite>AS_Weapons</researchPrerequisite>
		<skillRequirements>
			<Crafting>11</Crafting>
		</skillRequirements>
	</recipeMaker>
	<thingCategories>
		<li>AS_Weapons</li>
	</thingCategories>
	<verbs>
		<li>
			<verbClass>Verb_Shoot</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>AS_Bullet_Assault_Rifle</defaultProjectile>
			<warmupTime>1.1</warmupTime>
			<range>32.5</range>
			<burstShotCount>3</burstShotCount>
			<ticksBetweenBurstShots>9</ticksBetweenBurstShots>
			<soundCast>AS_Sound_Assault_Rifle</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
		</li>
	</verbs>
	<tools>
		<li>
			<label>stock</label>
			<capacities>
				<li>Blunt</li>
			</capacities>
			<power>9</power>
			<cooldownTime>2</cooldownTime>
		</li>
		<li>
			<label>barrel</label>
			<capacities>
				<li>Blunt</li>
				<li>Poke</li>
			</capacities>
			<power>9</power>
			<cooldownTime>2</cooldownTime>
		</li>
	</tools>
</ThingDef>

<ThingDef ParentName="BaseBullet">
	<defName>AS_Bullet_Assault_Rifle</defName>
	<label>elven assault rifle bullet</label>
	<projectile>
		<damageDef>Bullet</damageDef>
		<damageAmountBase>16</damageAmountBase>
		<stoppingPower>1.4</stoppingPower>
		<speed>120</speed>
	</projectile>
	<graphicData>
		<texPath>Things/Projectile/Bullet_small</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
</ThingDef>

<SoundDef>
	<defName>AS_Sound_Assault_Rifle</defName>
	<context>MapOnly</context>
	<maxSimultaneous>1</maxSimultaneous>
	<subSounds>
		<li>
			<grains>
				<li Class="AudioGrain_Clip">
					<clipPath>Assault_Rifle</clipPath>
				</li>
			</grains>
		</li>
	</subSounds>
</SoundDef>

<SoundDef>
	<defName>AS_Sound_Assault_Rifle_Interact</defName>
	<context>MapOnly</context>
	<maxSimultaneous>1</maxSimultaneous>
	<subSounds>
		<li>
			<grains>
				<li Class="AudioGrain_Clip">
					<clipPath>Assault_Rifle_Interact</clipPath>
				</li>
			</grains>
		</li>
	</subSounds>
</SoundDef>

</Defs>