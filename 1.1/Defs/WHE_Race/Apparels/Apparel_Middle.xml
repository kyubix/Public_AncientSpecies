<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- 防弾ベスト -->
  <ThingDef ParentName="AS_WHE_ApparelColorBase">
    <defName>AS_WHE_BulletProofVest</defName>
    <description>スチールと布で作られたシンプルな防弾ベスト。</description>
    <label>防弾ベスト（ハーフエルフ）</label>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>WHE/Apparels/middle/BulletProofVest</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costList>
      <Cloth>10</Cloth>
      <Steel>20</Steel>
    </costList>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>8500</WorkToMake>
      <Mass>2</Mass>
      <StuffEffectMultiplierArmor>0.45</StuffEffectMultiplierArmor>
      <ArmorRating_Sharp>0.3</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
      <ArmorRating_Heat>0.2</ArmorRating_Heat>
      <Insulation_Cold>2</Insulation_Cold>
      <Insulation_Heat>1</Insulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>CraftingSpot</li>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <researchPrerequisite>AS_WHE_Apparel_Elementary</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>WHE/Apparels/middle/BulletProofVest</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  <!-- Plate Armor -->
  <ThingDef ParentName="AS_WHE_ApparelColorBase">
    <defName>AS_WHE_PlateArmor</defName>
    <description>金属で作られたハーフエルフ式のプレートアーマー。首、胴体、肩、腕を守ってくれ、非常に丈夫だが、若干重い。</description>
    <label>ハーフエルフ式プレートアーマー</label>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>WHE/Apparels/middle/PlateArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <Cloth>30</Cloth>
    </costList>
    <costStuffCount>190</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>320</MaxHitPoints>
      <WorkToMake>40000</WorkToMake>
      <Mass>13</Mass>
      <StuffEffectMultiplierArmor>0.84</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.1</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.2</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>15</EquipDelay>
      <Flammability>0.2</Flammability>
    </statBases>
    <equippedStatOffsets>
			<MoveSpeed>-0.05</MoveSpeed>
			<WorkSpeedGlobal>-0.1</WorkSpeedGlobal>
		</equippedStatOffsets>
     <recipeMaker>
      <researchPrerequisite>AS_WHE_Apparel_Intermediate</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>WHE/Apparels/middle/PlateArmor</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
</Defs>